<div style="width: 50vw; display: flex; justify-content: center;">
<form method="" action="">
    <div class="form-group">
        <label for="productName">Product Name</label>
        <input type="text" class="form-control" id="productName" placeholder="Product Name" onfocus="this.placeholder = ''">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" placeholder="Price" onfocus="this.placeholder = ''">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" placeholder="Category" onfocus="this.placeholder = ''">
    </div>
    <div class="form-group">
        <label for="productDescription">Product Description</label>
        <textarea class="form-control" id="productDescription" rows="3" placeholder="Product Description" onfocus="this.placeholder = ''"></textarea>
    </div>
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="productPicture" onfocus="this.placeholder = ''">
        <label class="custom-file-label" for="productPicture">Product Picture</label>
    </div>
    <div>
        <button type="button" class="btn btn-primary">Submit</button>
    </div>
</form>
</div>
